<%# coding: utf-8 %>
<%= bx_title %>

<%= bx_tabs params[:tab] %>

<div class="tab-content">
  <%= error_messages_for @form %>
  <%= labelled_form_for :form, @form, :url => project_bx_resource_branches_path(@project, @resource) do |f| %>
    <%= f.hidden_field :root_node_id %>
    <%= render :partial => "form", :locals => { :f => f, :form => @form } %>
    <%= f.submit l(:button_create) %>
    <%= link_to l(:button_cancel), project_bx_root_resource_path(@project, @resource) %>
  <% end %>
</div>
