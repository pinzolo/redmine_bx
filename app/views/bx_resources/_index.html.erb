<%# coding: utf-8 %>
<% if User.current.allowed_to?(:bx_manage_resources, @project) %>
  <p><%= link_to l("bx.label.new_resource"), new_root_project_resources_path(@project), :class => 'icon icon-add', :remote => true %></p>
<% end %>
<% roots = BxResourceNode.roots(@project) %>
<% if roots.empty? %>
<p class="nodata"><%= l(:label_no_data) %></p>
<% else %>
<ul>
  <% roots.each do |root| %>
  <li><%= root.name %></li>
  <% end %>
</ul>
<% end %>
<% if User.current.allowed_to?(:bx_manage_resources, @project) %>
  <p><%= link_to l("bx.label.new_resource"), new_root_project_resources_path(@project), :class => 'icon icon-add', :remote => true %></p>
<% end %>

